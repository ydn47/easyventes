{% extends '::base.html.twig' %}

{% block breadcrumbs %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>Listes des produits</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li><a href="">Acceuil</a>
                        </li>
                        <li>Produits</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
{% endblock breadcrumbs %}

{% block body %}
    <h1>Liste des produits</h1>

    <div class="row">
        <div class="col-md-9" id="customer-orders">
            <div class="box">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <tr>
                            <td>#</td>
                            <td>Name</td>
                            <td>qty</td>
                            <td>Action</td>
                        </tr>
                        {% for product in products %}
                            <tr>
                                <td>{{ product.name }}</td>
                                <td>{{ product.qty }}</td>
                                <td><a href="{{ path('easy_product_detail', {'id': product.id})  }}" class="btn btn-template-main btn-sm"><i class="fa fa-eye"></i> Voir</a>
                                    <a href="">Modifier</a>
                                    <a href="{{ path('easy_product_remove', {'id': product.id})  }}"><i class="fa fa-trash-o"></i> Supprimer</a></td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
    <a href="{{ path('easy_product_add') }}" class="btn btn-template-main"> Ajouter un nouveau produit</a>
{% endblock %}