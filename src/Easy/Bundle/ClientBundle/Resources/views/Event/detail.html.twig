{% extends '::base.html.twig' %}
{% block breadcrumbs %}
    <div id="heading-breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col-md-7">
                    <h1>S'inscrire</h1>
                </div>
                <div class="col-md-5">
                    <ul class="breadcrumb">
                        <li><a href="">Acceuil</a>
                        </li>
                        <li>{{ event.name }}</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>
{% endblock breadcrumbs %}
{% block body %}
    <div class="row">
        <h1>Fiche Evènement</h1>

        <div class="list-group">
            <div class="list-group-item active">
               {{ event.name }}
                <span class="badge">100 Places</span>
            </div>
            <div class="list-group-item">
                {{ event.description }}
            </div>
            <div class="list-group-item">
                <p> Du {{ event.dateStart | date("d/m/Y")  }} à {{ event.dateStart | date("H:i")  }} </p>
                <p>Au {{ event.dateEnd | date("d/m/Y")  }} à {{ event.dateEnd | date("H:i")  }} </p>
            </div>
            <div class="list-group-item">
            Catégories:
                {% for category in event.categories %}
                    <li>{{ category.name }}</li>
                {% endfor %}
            </div>
        </div>

        {% if state is not null %}
            {% if state == 'DEM' %}
                <p class="bg-success"> En attente de confirmation de participation </p>
            {% elseif state == 'VAL' %}
                <p class="bg-success"> Participation Validé </p>
            {%  elseif state == 'REF'%}
                <p "bg-danger"> Participation Refusé </p>
            {% endif %}
        {% else %}
            <a class="btn btn-primary" href="{{ path('easy_client_event_inscription', {id : event.id }) }}">Participer à l'évènement</a>
        {% endif %}

        <h3>Produits liés à la vente</h3>
        <div class="row">
        {% for product in products %}

            <div class="col-lg-2">
                <div class="panel panel-default">
                    <div class="panel-heading">{{ product.name }}</div>
                    <div class="panel-body">
                        {% if product.picture %}
                            <img width="100px" src="{{ asset(product.getWebPath())}}" alt="" />
                        {% endif %}
                        {{ product.description }}
                    </div>
                </div>
            </div>
        {% endfor %}
        </div>
    </div>
{% endblock %}
