{% extends '::dashboard.html.twig' %}



{% block body %}
    <h1>Produits</h1>
    <div class="row">
    <div class="col-md-9" id="customer-orders">
        <div class="box">
            <div class="table-responsive">
                <table class="table table-hover">
            <tr>
                <td>Name</td>
                <td>Quantité</td>
                <td>Prix</td>
                <td>Actions</td>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.qty }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        <a class="btn btn-template-main btn-sm" href="{{ path('easy_product_detail', {'id': product.id}) }}">Voir</a>
                        <a class="btn btn-template-primary" href="{{ path('easy_product_update', {'id': product.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
            </div>
        </div>
    </div>
    </div>
    <a href="{{ path('easy_product_add') }}" class="btn btn-template-main"> Ajouter un nouveau produit</a>
{% endblock %}