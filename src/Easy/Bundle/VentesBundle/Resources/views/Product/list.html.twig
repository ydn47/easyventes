{% extends '::base.html.twig' %}

{% block body %}
    <div class="row">
        <h1>Produits</h1>
        <table class="table">
            <tr>
                <td>Name</td>
                <td>Quantité</td>
                <td>Prix</td>
                <td>Action</td>
            </tr>
            {% for product in products %}
                <tr>
                    <td>{{ product.name }}</td>
                    <td>{{ product.qty }}</td>
                    <td>{{ product.price }} €</td>
                    <td>
                        <a class="btn btn-primary" href="{{ path('easy_product_detail', {'id': product.id}) }}">Voir</a>
                        <a class="btn btn-primary" href="{{ path('easy_product_update', {'id': product.id}) }}">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <a class="btn btn-primary" href="{{ path('easy_product_add') }}"> Ajouter un nouveau produit</a>
    </div>
{% endblock %}