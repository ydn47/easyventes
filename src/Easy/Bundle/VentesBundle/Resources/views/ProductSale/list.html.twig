{% extends '::dashboard.html.twig' %}
{% block nav %}
    {% include ':include:navback.html.twig' %}
{% endblock nav %}
{% block body %}
    <h1>List des produits de l'event</h1>
    <div class="row">
        <table class="table table-striped">
            <tr>
                <th>Produit</th>
                <th>Quantit√© vendue</th>
            </tr>

                {% for product in products %}
                    <tr>
                        <td>{{ product.name }}</td>
                        <td><form action="{{ path('easy_productsale_update') }}" method="POST"><input type="number" name="qty" value="{{ product.qty }}"/><input type="hidden" name="product_id" value="{{ product.id }}"/><input type="submit" value="Modifier"/></form></td>
                    </tr>
                {% endfor %}

        </table>
    </div>
{% endblock %}